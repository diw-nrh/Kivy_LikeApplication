#:kivy 2.0.0
WidgetsExample:

<WidgetsExample@GridLayout>:
    cols: 3
    ToggleButton:
        text: "toggle"
        on_state: root.on_toggle_button_state()
    Button:
        text: "Count"
        on_press: root.on_button_click()
    Label:
        text: root.my_test
        color: 1, .5, 1, 1
        forn_size: "88dp"


