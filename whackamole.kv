#:kivy 2.0.0

GridLayout:
    cols: 6
    spacing: 10
    padding: 10

    canvas.before:
        Rectangle:
            source: "image_file\grass.png"
            pos: self.pos
            size: self.size

    Label:
        id: score_label
        text: "Score: 0"
        font_size: 24
        size_hint: (1, 0.5)
        colspan: 5

    Button:
        id: start_button
        text: "Start Game"
        font_size: 20
        size_hint: (1, 0.2)
        background_color: [0,1,0, 1]
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        on_press: app.start_game()

    Button:
        id: reset_button
        text: "Reset"
        font_size: 20
        size_hint: (1, 0.5)
        background_color: [0, 0, 1, 1]
        on_press: app.reset_game()

    Button:
        id: upbomb_button
        text: "BOMB increased"
        font_size: 19
        size_hint: (1, 0.5)
        background_color: [1, 1, 1, 1]
        on_press: app.upbomb_button()

    Button:
        id: downbomb_button
        text: "BOMB reductione"
        font_size: 19
        size_hint: (1, 0.5)
        background_color: [1, 1, 1, 1]
        on_press: app.downbomb_button()

    Button:
        id: leav_game
        text: "leave"
        font_size: 20
        size_hint: (1, 0.5)
        background_color: [1, 1, 1, 1]
        on_press: app.leave_game()

